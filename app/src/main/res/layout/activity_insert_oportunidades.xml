<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".view.controller.InsertOportunidadesActivity">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayoutInsOportunidade">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsOportunidadeNome"
            android:hint="@string/edtInsOportunidadeNome"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Conta"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsOportunidadeConta"
            android:spinnerMode="dialog"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tipo"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsOportunidadeTipo"
            android:spinnerMode="dialog"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Origem do lead"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsOportunidadeOrigemLead"
            android:spinnerMode="dialog"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsOportunidadeValor"
            android:hint="@string/edtInsOportunidadeValor"
            android:inputType="numberDecimal"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsOportunidadeDataFechamento"
            android:hint="@string/edtInsOportunidadeDataFechamento"
            android:inputType="number"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsOportunidadeProxEtapa"
            android:hint="@string/edtInsOportunidadeProxEtapa"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fase"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsOportunidadeFase"
            android:spinnerMode="dialog"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsOportunidadeProbabilidade"
            android:hint="@string/edtInsOportunidadeProbabilidade"
            android:inputType="number"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Campanha"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsOportunidadeCampanha"
            android:spinnerMode="dialog"/>

         <Button
            android:id="@+id/btnInsOportunidadeInsert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btnInsOportunidadeInsert"
            android:onClick="insertOportunidade"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>