<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.controller.InsertOportunidadesActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayoutInsOportunidade">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsOportunidadeNome"
            android:hint="@string/edtInsOportunidadeNome"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsOportunidadeConta"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsOportunidadeTipo"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsOportunidadeOrigemLead"
            android:spinnerMode="dialog"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsOportunidadeValor"
            android:hint="@string/edtInsOportunidadeValor"
            android:inputType="numberDecimal"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsOportunidadeDataFechamento"
            android:hint="@string/edtInsOportunidadeDataFechamento"
            android:inputType="number"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsOportunidadeProxEtapa"
            android:hint="@string/edtInsOportunidadeProxEtapa"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsOportunidadeFase"
            android:spinnerMode="dialog"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsOportunidadeProbabilidade"
            android:hint="@string/edtInsOportunidadeProbabilidade"
            android:inputType="number"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsOportunidadeCampanha"
            android:spinnerMode="dialog"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnInsOportunidadeInsert"
            android:id="@+id/btnInsOportunidadeInsert"
            android:onClick="insertOportunidade"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>