<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.customercare.tcc.view.controller.ViewContaActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                card_view:cardBackgroundColor="#ede9e9e9"
                card_view:cardCornerRadius="1dp"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginTop="50dp"
                >

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="16dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaPropietario"
                        android:text="@string/txtViewContaPropietario"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValuePropietario"
                        android:textSize="14sp"
                        android:layout_below="@+id/txtViewContaPropietario"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaNome"
                        android:text="@string/txtViewContaNome"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValuePropietario"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueNome"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaNome"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaClassificao"
                        android:text="@string/txtViewContaClassificao"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueNome"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueClassificao"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaClassificao"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaOrigem"
                        android:text="@string/txtViewContaOrigem"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueClassificao"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueOrigem"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaOrigem"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaTelefone"
                        android:text="@string/txtViewContaTelefone"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueOrigem"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueTelefone"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaTelefone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaSetor"
                        android:text="@string/txtViewContaSetor"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueTelefone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueSetor"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaSetor"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaTipo"
                        android:text="@string/txtViewContaTipo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueSetor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueTipo"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaTipo"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaReceita"
                        android:text="@string/txtViewContaReceita"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueTipo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueReceita"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaReceita"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaFuncionarios"
                        android:text="@string/txtViewContaFuncionarios"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueReceita"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueFuncionarios"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaFuncionarios"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/txtViewContaEndereco"
                        android:text="@string/txtViewContaEndereco"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/txtViewContaValueFuncionarios"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtViewContaValueEndereco"
                        android:paddingLeft="20dp"
                        android:layout_below="@+id/txtViewContaEndereco"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="@color/transp"
        fab:menu_fab_label="Menu de conta">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_size="mini"
            fab:fab_label="Editar" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_size="mini"
            fab:fab_label="Excluir" />

    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>

