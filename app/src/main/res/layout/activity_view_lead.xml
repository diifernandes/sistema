<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.customercare.tcc.view.controller.ViewLeadActivity"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
 >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        card_view:cardBackgroundColor="#ede9e9e9"
        card_view:cardCornerRadius="1dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="50dp"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadNome"
                android:text="@string/txtViewLeadNome"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueNome"
                android:textSize="14sp"
                android:layout_below="@+id/txtViewLeadNome"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadEmpresa"
                android:text="@string/txtViewLeadEmpresa"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueNome"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueEmpresa"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadEmpresa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadOrigem"
                android:text="@string/txtViewLeadOrigem"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueEmpresa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueOrigem"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadOrigem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadSetor"
                android:text="@string/txtViewLeadSetor"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueOrigem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueSetor"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadSetor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadReceita"
                android:text="@string/txtViewLeadReceita"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueSetor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueReceita"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadReceita"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadTelefone"
                android:text="@string/txtViewLeadTelefone"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueReceita"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueTelefone"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadTelefone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadEmail"
                android:text="@string/txtViewLeadEmail"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueTelefone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueEmail"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadEmail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadStatus"
                android:text="@string/txtViewLeadStatus"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueEmail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueStatus"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadStatus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadClassificacao"
                android:text="@string/txtViewLeadClassificacao"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueStatus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueClassificacao"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadClassificacao"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txtViewLeadFuncionarios"
                android:text="@string/txtViewLeadFuncionarios"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueClassificacao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueFuncionarios"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadFuncionarios"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadEndereco"
                android:text="@string/txtViewLeadEndereco"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/txtViewLeadValueFuncionarios"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewLeadValueEndereco"
                android:paddingLeft="20dp"
                android:layout_below="@+id/txtViewLeadEndereco"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="30dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnViewLeadExcluir"
                android:text="@string/btnViewLeadExcluir"
                android:onClick="deleteLead"
                android:layout_gravity="left"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnViewLeadConverter"
                android:text="@string/btnViewLeadConverter"
                android:onClick="convertLead"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="22dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnViewLeadAtualizar"
                android:text="@string/btnViewLeadAtualizar"
                android:onClick="updateLead"
                android:layout_gravity="right"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="22dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="@color/transp"
        fab:menu_fab_label="Menu de lead">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_size="mini"
            fab:fab_label="Editar" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_size="mini"
            fab:fab_label="Converter" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_size="mini"
            fab:fab_label="Excluir" />
    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>

