<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.controller.UpdateOportunidadesActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayoutUpdOportunidade">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUpdOportunidadeNome"
            android:hint="@string/edtUpdOportunidadeNome"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiUpdOportunidadeConta"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiUpdOportunidadeTipo"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiUpdOportunidadeOrigemLead"
            android:spinnerMode="dialog"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUpdOportunidadeValor"
            android:hint="@string/edtUpdOportunidadeValor"
            android:inputType="numberDecimal"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUpdOportunidadeDataFechamento"
            android:hint="@string/edtUpdOportunidadeDataFechamento"
            android:inputType="number"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUpdOportunidadeProxEtapa"
            android:hint="@string/edtUpdOportunidadeProxEtapa"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiUpdOportunidadeFase"
            android:spinnerMode="dialog"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUpdOportunidadeProbabilidade"
            android:hint="@string/edtUpdOportunidadeProbabilidade"
            android:inputType="number"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiUpdOportunidadeCampanha"
            android:spinnerMode="dialog"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnUpdOportunidadeUpdate"
            android:id="@+id/btnUpdOportunidadeUpdate"
            android:onClick="updateOportunidade"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>