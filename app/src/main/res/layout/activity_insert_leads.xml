<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.controller.InsertLeadActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayoutInsLead">

        <EditText
            android:id="@+id/edtInsLeadNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadNome"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadSobrenome"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadEmpresa"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadOrigem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadOrigem"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadSetor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadSetor"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadReceita"
            android:inputType="numberDecimal"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadTelefone"
            android:inputType="number"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadEmail"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsLeadStatus"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsLeadClassificacao"
            android:spinnerMode="dialog"/>

        <EditText
            android:id="@+id/edtInsLeadFuncionarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadFuncionarios"
            android:inputType="number"
            android:layout_gravity="left"/>

        <EditText
            android:id="@+id/edtInsLeadEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/edtInsLeadEndereco"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btnInsLeadInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnInsLeadInsert"
            android:onClick="insertLead"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>