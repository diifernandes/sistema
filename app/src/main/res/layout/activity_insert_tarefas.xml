<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.controller.InsertTarefasActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayoutInsTarefa">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsTarefaAssunto"
            android:hint="@string/edtInsTarefaAssunto"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsTarefaDataVencimento"
            android:hint="@string/edtInsTarefaDataVencimento"
            android:inputType="number"
            android:layout_gravity="left"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsTarefaPrioridade"
            android:spinnerMode="dialog"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsTarefaStatus"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsTarefaQuem"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsTarefaQuemNome"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsTarefaRelativo"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spiInsTarefaRelativoObjeto"
            android:spinnerMode="dialog" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtInsTarefaComentario"
            android:hint="@string/edtInsTarefaComentarios"
            android:layout_gravity="left"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnInsTarefaInsert"
            android:id="@+id/btnInsTarefaInsert"
            android:onClick="insertTarefa"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>