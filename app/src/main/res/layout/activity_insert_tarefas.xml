<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context=".view.controller.InsertTarefasActivity">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/linearLayoutInsTarefa">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsTarefaAssunto"
            android:hint="@string/edtInsTarefaAssunto"
            android:layout_gravity="left"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsTarefaDataVencimento"
            android:hint="@string/edtInsTarefaDataVencimento"
            android:inputType="number"
            android:layout_gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Prioridade"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsTarefaPrioridade"
            android:spinnerMode="dialog"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Status"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsTarefaStatus"
            android:spinnerMode="dialog" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Objeto a ser relacionado "/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsTarefaQuem"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Atribuido Ã "/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsTarefaQuemNome"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsTarefaRelativo"
            android:spinnerMode="dialog" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/spiInsTarefaRelativoObjeto"
            android:spinnerMode="dialog" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edtInsTarefaComentario"
            android:hint="@string/edtInsTarefaComentarios"
            android:layout_gravity="left"/>

          <Button
            android:id="@+id/btnInsTarefaInsert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btnInsTarefaInsert"
            android:onClick="insertTarefa"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>