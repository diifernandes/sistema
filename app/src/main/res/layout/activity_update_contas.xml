<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.customercare.tcc.view.controller.UpdateContactActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

    <EditText
        android:id="@+id/edtUpdContaNome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaNome"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Classificação"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spiUpdContaClassificacao"
        android:spinnerMode="dialog"/>

    <EditText
        android:id="@+id/edtUpdContaOrigem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaOrigem"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaTelefone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaTelefone"
        android:inputType="number"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaSetor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaSetor"
        android:layout_gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tipo"/>
            <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiUpdContaTipo"
        android:spinnerMode="dialog"/>

    <EditText
        android:id="@+id/edtUpdContaReceita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaReceita"
        android:inputType="numberDecimal"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaFuncionarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaFuncionarios"
        android:inputType="number"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaEndereco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edtUpdContaEndereco"
        android:layout_gravity="left"/>

              <Button
                android:id="@+id/btnUpdContaUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btnUpdContaUpdate"
                android:onClick="updateConta"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>