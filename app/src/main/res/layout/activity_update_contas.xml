<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.controller.UpdateContasActivity">

    <EditText
        android:id="@+id/edtUpdContaNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaNome"
        android:layout_gravity="left"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiUpdContaClassificacao"
        android:spinnerMode="dialog"/>

    <EditText
        android:id="@+id/edtUpdContaOrigem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaOrigem"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaTelefone"
        android:inputType="number"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaSetor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaSetor"
        android:layout_gravity="left"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiUpdContaTipo"
        android:spinnerMode="dialog"/>

    <EditText
        android:id="@+id/edtUpdContaReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaReceita"
        android:inputType="numberDecimal"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaFuncionarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaFuncionarios"
        android:inputType="number"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/edtUpdContaEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edtUpdContaEndereco"
        android:layout_gravity="left"/>

    <Button
        android:id="@+id/btnUpdContaUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnUpdContaUpdate"
        android:onClick="updateConta"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
